# Data Configuration
DATA_PATH=Root_Folder
FILE_FOLDER=Rag_Info/File_Folder
VECTOR_FOLDER=Rag_Info/Faiss_Folder

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/

# LLM Provider Configuration
# Options: gemini, openai, groq, ollama
LLM_PROVIDER=gemini

# API Keys for Cloud LLM Providers
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Model Selection for Each Provider
GEMINI_MODEL=gemini-2.5-flash
OPENAI_MODEL=gpt-4o
GROQ_MODEL=llama-3.1-8b-instant

# Ollama Configuration (Local LLM)
# Sử dụng khi LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
# Các model khác có thể sử dụng:
# - llama3.1:8b
# - llama3.1:70b
# - mistral:latest
# - codellama:latest
# - gemma:7b

# Context Management
MAX_CONTEXT_MESSAGES=10
CONTEXT_STRATEGY=keep_system
